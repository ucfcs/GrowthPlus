<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:id="@+id/parentSignUpActivityID"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ParentSignup">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.22" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.78" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/playEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.69" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/playStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.31" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/parentImgTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bunnyBottomLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.41" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/createBottomLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.46" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nameBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/confirmBottomLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.61" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/confirmInputLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/phoneNumBottomLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.77" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/phoneNumInputLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.83" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/playTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.87" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/playBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.94" />

    <android.widget.Button
        android:id="@+id/backParentSU"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/blue"
        android:drawableStart="@drawable/back_arrow"
        android:paddingStart="30dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toTopOf="@id/buttonBottom"
        app:layout_constraintEnd_toStartOf="@id/buttonEnd"
        app:layout_constraintStart_toStartOf="@id/buttonStart"
        app:layout_constraintTop_toBottomOf="@id/buttonTop"/>

    <ImageView
        android:id="@+id/parentCircle"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/light_green"
        app:layout_constraintBottom_toTopOf="@id/bunnyBottomLine"
        app:layout_constraintStart_toEndOf="@id/buttonEnd"
        app:layout_constraintEnd_toStartOf="@id/buttonS"
        app:layout_constraintTop_toBottomOf="@id/parentImgTop"/>

    <ImageView
        android:id="@+id/parentImg"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:background="@mipmap/parent_foreground"
        app:layout_constraintBottom_toTopOf="@id/bunnyBottomLine"
        app:layout_constraintStart_toEndOf="@id/buttonEnd"
        app:layout_constraintEnd_toStartOf="@id/buttonS"
        app:layout_constraintTop_toBottomOf="@id/parentImgTop">
    </ImageView>

    <TextView
        android:id="@+id/phoneNumberText"
        android:fontFamily="@font/fredoka_one_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_green"
        android:textSize="25sp"
        android:text="phone number"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@id/buttonEnd"
        app:layout_constraintEnd_toStartOf="@id/buttonS"
        app:layout_constraintTop_toBottomOf="@id/bunnyBottomLine"
        app:layout_constraintBottom_toTopOf="@id/createBottomLine">
    </TextView>

    <EditText
        android:id="@+id/phoneNumberInput"
        android:fontFamily="@font/fredoka_one_regular"
        android:textColor="@color/dark_grey"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button_two"
        android:backgroundTint="@color/grey"
        android:hint="phone number"
        android:textColorHint="@color/dark_grey"
        android:inputType="phone"
        android:maxLength="16"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/nameBottom"
        app:layout_constraintEnd_toStartOf="@id/buttonS"
        app:layout_constraintStart_toEndOf="@id/buttonEnd"
        app:layout_constraintTop_toBottomOf="@id/createBottomLine"/>

    <TextView
        android:id="@+id/createPinText"
        android:fontFamily="@font/fredoka_one_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_green"
        android:textSize="25sp"
        android:text="create 4 digit pin"
        app:layout_constraintTop_toBottomOf="@id/nameBottom"
        app:layout_constraintBottom_toTopOf="@id/confirmBottomLine"
        app:layout_constraintStart_toEndOf="@id/buttonEnd"
        app:layout_constraintEnd_toStartOf="@id/buttonS">
    </TextView>

    <EditText
        android:id="@+id/enterPin"
        android:fontFamily="@font/fredoka_one_regular"
        android:textColor="@color/dark_grey"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button_two"
        android:inputType="number"
        android:maxLength="4"
        android:hint="Pin"
        android:textColorHint="@color/dark_grey"
        android:textSize="30sp"
        android:backgroundTint="@color/grey"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/confirmBottomLine"
        app:layout_constraintBottom_toTopOf="@id/confirmInputLine"
        app:layout_constraintStart_toEndOf="@id/buttonEnd"
        app:layout_constraintEnd_toStartOf="@id/buttonS"/>

    <TextView
        android:id="@+id/confirmPinText"
        android:fontFamily="@font/fredoka_one_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_green"
        android:textSize="25sp"
        android:text="confirm"
        app:layout_constraintTop_toBottomOf="@id/confirmInputLine"
        app:layout_constraintBottom_toTopOf="@id/phoneNumBottomLine"
        app:layout_constraintStart_toEndOf="@id/buttonEnd"
        app:layout_constraintEnd_toStartOf="@id/buttonS">
    </TextView>

    <EditText
        android:id="@+id/confirmPinInput"
        android:fontFamily="@font/fredoka_one_regular"
        android:textColor="@color/dark_grey"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button_two"
        android:inputType="number"
        android:maxLength="4"
        android:hint="Pin"
        android:textColorHint="@color/dark_grey"
        android:textSize="30sp"
        android:backgroundTint="@color/grey"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/phoneNumBottomLine"
        app:layout_constraintBottom_toTopOf="@id/phoneNumInputLine"
        app:layout_constraintStart_toEndOf="@id/buttonEnd"
        app:layout_constraintEnd_toStartOf="@id/buttonS"/>

    <android.widget.Button
        android:id="@+id/parentSignupBtn"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button_two"
        android:backgroundTint="@color/dark_green"
        android:drawableStart="@drawable/play_xlarge"
        android:paddingStart="110dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toBottomOf="@id/playTop"
        app:layout_constraintBottom_toTopOf="@id/playBottom"
        app:layout_constraintStart_toEndOf="@id/playStart"
        app:layout_constraintEnd_toStartOf="@id/playEnd"
        />

</androidx.constraintlayout.widget.ConstraintLayout>