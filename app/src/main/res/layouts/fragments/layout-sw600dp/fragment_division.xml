<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragment.Division">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline10"
        app:layout_constraintEnd_toEndOf="@id/guideline11"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/barTwoDivision"
            android:visibility="invisible"
            android:layout_width="40dp"
            android:layout_height="150dp"
            android:layout_marginTop="95dp"
            android:layout_marginStart="120dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/blue" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="195dp"
            android:layout_height="8dp"
            android:layout_marginStart="77dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/dark_green"
            android:src="@drawable/round_button"
            app:layout_constraintStart_toStartOf="@id/guideline10"
            app:layout_constraintEnd_toStartOf="@id/guideline11"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="8dp"
            android:layout_height="100dp"
            android:layout_marginStart="77dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/dark_green"
            android:src="@drawable/round_button"
            app:layout_constraintStart_toStartOf="@id/guideline10"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="195dp"
            android:layout_height="8dp"
            android:layout_marginStart="77dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/dark_green"
            android:src="@drawable/round_button" />

        <TextView
            android:id="@+id/divisor"
            android:fontFamily="@font/fredoka_one_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="4"
            android:textColor="@color/orange"
            android:textSize="55sp" />

        <TextView
            android:id="@+id/dividend"
            android:fontFamily="@font/fredoka_one_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="100dp"
            android:text="1 5"
            android:textColor="@color/orange"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/quotient"
            android:fontFamily="@font/fredoka_one_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="10dp"
            android:text="3"
            android:textColor="@color/orange"
            android:textSize="55sp" />

        <TextView
            android:id="@+id/subtractNumber"
            android:fontFamily="@font/fredoka_one_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginStart="90dp"
            android:text="1 2"
            android:textColor="@color/orange"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/operator"
            android:fontFamily="@font/fredoka_one_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="180dp"
            android:text="-"
            android:textColor="@color/orange"
            android:textSize="55sp" />

        <TextView
            android:id="@+id/remainder"
            android:fontFamily="@font/fredoka_one_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="270dp"
            android:text="3"
            android:textColor="@color/orange"
            android:textSize="55sp" />

    </FrameLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".1"  />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".9"  />

</androidx.constraintlayout.widget.ConstraintLayout>