<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragment.CustomEquation">

    <ImageView
        android:id="@+id/bar"
        android:layout_width="260dp"
        android:layout_height="10dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/light_green"
        android:src="@drawable/round_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/round_button" />

    <TextView
        android:id="@+id/first_number"
        android:fontFamily="@font/fredoka_one_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/light_green"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/carryInputHolder"
        android:fontFamily="@font/fredoka_one_regular"
        android:visibility="invisible"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/grey"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="35sp"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/first_number"/>

    <TextView
        android:id="@+id/second_number"
        android:fontFamily="@font/fredoka_one_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="35dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/light_green"
        android:textSize="80sp"
        app:layout_constraintBottom_toTopOf="@+id/bar"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/operator"
        android:fontFamily="@font/fredoka_one_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="35dp"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@color/light_green"
        android:textSize="80sp"
        app:layout_constraintBottom_toTopOf="@+id/bar"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>