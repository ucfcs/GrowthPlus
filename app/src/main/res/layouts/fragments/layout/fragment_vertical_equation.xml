<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragment.VerticalEquation">

    <ImageView
        android:id="@+id/barOne"
        android:visibility="invisible"
        android:layout_width="70dp"
        android:layout_height="210dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline11"
        android:layout_marginEnd="15dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/light_green"/>

    <ImageView
        android:id="@+id/boxOne"
        android:visibility="invisible"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline11"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/light_green"/>

    <ImageView
        android:id="@+id/barTwo"
        android:visibility="invisible"
        android:layout_width="70dp"
        android:layout_height="210dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="-8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/barOne"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/light_green"/>

    <ImageView
        android:id="@+id/boxTwo"
        android:visibility="invisible"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="-25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/barOne"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/light_green"/>

    <ImageView
        android:id="@+id/carryInput"
        android:visibility="invisible"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/barTwo"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/grey"/>

    <TextView
        android:id="@+id/carryInputNum"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/barTwo"/>

    <ImageView
        android:id="@+id/bar"
        android:layout_width="260dp"
        android:layout_height="10dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/dark_green"
        android:src="@drawable/round_button"
        app:layout_constraintStart_toStartOf="@id/guideline10"
        app:layout_constraintEnd_toEndOf="@id/guideline11"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/round_button" />

    <TextView
        android:id="@+id/first_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="20dp"
        android:text="1 7"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="75sp"
        app:layout_constraintEnd_toEndOf="@id/guideline11"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/second_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="27dp"
        android:text="23"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/bar"
        app:layout_constraintEnd_toEndOf="@id/guideline11" />

    <TextView
        android:id="@+id/operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="27dp"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/bar"
        app:layout_constraintStart_toStartOf="@id/guideline10" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="27dp"
        android:text="40"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="75sp"
        app:layout_constraintTop_toBottomOf="@+id/bar"
        app:layout_constraintEnd_toEndOf="@id/guideline11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".9"/>

</androidx.constraintlayout.widget.ConstraintLayout>