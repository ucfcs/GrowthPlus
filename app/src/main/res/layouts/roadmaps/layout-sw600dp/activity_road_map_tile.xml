<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tile"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:src="@drawable/tile_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/roadmapTriangle"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:gravity="center_horizontal|center_vertical"
        android:rotationX="180"
        android:text="â–¼"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="50sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tile"
        app:layout_constraintEnd_toEndOf="@+id/tile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tile"
        app:layout_constraintTop_toTopOf="@+id/tile"
        app:layout_constraintVertical_bias="0.55" />

    <ImageView
        android:id="@+id/roadmapCircle"
        android:layout_height="35dp"
        android:layout_width="35dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/dark_green"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tile"
        app:layout_constraintEnd_toEndOf="@+id/tile"
        app:layout_constraintStart_toStartOf="@+id/tile"
        app:layout_constraintTop_toTopOf="@+id/tile"/>

    <ImageView
        android:id="@+id/roadmapStar"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:background="@drawable/star"
        android:backgroundTint="@color/yellow"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tile"
        app:layout_constraintEnd_toEndOf="@+id/tile"
        app:layout_constraintStart_toStartOf="@+id/tile"
        app:layout_constraintTop_toTopOf="@+id/tile"/>

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintBottom_toBottomOf="@+id/tile"
        app:layout_constraintEnd_toEndOf="@+id/tile"
        app:layout_constraintStart_toStartOf="@+id/tile"
        app:layout_constraintTop_toTopOf="@+id/tile" />

</androidx.constraintlayout.widget.ConstraintLayout>