<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".roadMapActivity.RoadMapFour"
    android:background="@drawable/level4"
    android:id="@+id/roadMapFour">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

   <com.GrowthPlus.customViews.TopBar
        android:id="@+id/topBarFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.GrowthPlus.customViews.RoadMapLessonTrail
        android:id="@+id/roadMapFourLessonTrail"
        android:layout_width="680dp"
        android:layout_height="750dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBarFour">

    </com.GrowthPlus.customViews.RoadMapLessonTrail>

    <include
        layout="@layout/roadmap_bottom_navigation"
        tools:layout_editor_absoluteX="-25dp"
        tools:layout_editor_absoluteY="82dp" />

</androidx.constraintlayout.widget.ConstraintLayout>