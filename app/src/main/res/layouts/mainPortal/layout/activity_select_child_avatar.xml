<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectChildAvatar">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <ImageView
        android:id="@+id/bunnyOption"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/yellow"
        android:src="@mipmap/bunny_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/middleGuideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/horizontal1">
    </ImageView>

    <ImageView
        android:id="@+id/elephantOption"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/orange"
        android:src="@mipmap/elephant_foreground"
        app:layout_constraintStart_toStartOf="@id/middleGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/horizontal1">

    </ImageView>

    <ImageView
        android:id="@+id/birdOption"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/light_green"
        android:src="@mipmap/guinea_fowl_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/middleGuideline"
        app:layout_constraintTop_toTopOf="@id/horizontal1"
        app:layout_constraintBottom_toTopOf="@id/horizontal2">

    </ImageView>

    <ImageView
        android:id="@+id/camelOption"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/red"
        android:src="@mipmap/camel_foreground"
        app:layout_constraintStart_toStartOf="@id/middleGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontal1"
        app:layout_constraintBottom_toTopOf="@id/horizontal2">

    </ImageView>

    <ImageView
        android:id="@+id/squirrelOption"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/orange"
        android:src="@mipmap/squirrel_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/middleGuideline"
        app:layout_constraintTop_toTopOf="@id/horizontal2"
        app:layout_constraintBottom_toBottomOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/giraffeOption"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/yellow"
        android:src="@mipmap/giraffe_foreground"
        app:layout_constraintStart_toStartOf="@id/middleGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontal2"
        app:layout_constraintBottom_toBottomOf="parent">

    </ImageView>

    <android.widget.Button
        android:id="@+id/backSelectChild"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/blue"
        android:drawableStart="@drawable/back_arrow"
        android:paddingStart="22dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toTopOf="@id/buttonBottom"
        app:layout_constraintEnd_toStartOf="@id/buttonEnd"
        app:layout_constraintStart_toStartOf="@id/buttonStart"
        app:layout_constraintTop_toBottomOf="@id/buttonTop"/>


</androidx.constraintlayout.widget.ConstraintLayout>