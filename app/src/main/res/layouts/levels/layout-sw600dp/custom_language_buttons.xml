<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/englishBtn"
            android:layout_width="520dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_button_two"
            android:backgroundTint="@color/yellow"
            android:clickable="true"
            app:layout_constraintBottom_toTopOf="@id/frenchBtn"
            app:layout_constraintEnd_toEndOf="@id/leftGuide"
            app:layout_constraintStart_toStartOf="@id/rightGuide">

            <ImageView
                android:id="@+id/englishCheck"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="440dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/dark_green"
                android:src="@drawable/ic_check_mark"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/englishText"
                android:fontFamily="@font/fredoka_one_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/yellow"
                android:gravity="center_vertical"
                android:paddingStart="40dp"
                android:text="English"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="42sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frenchBtn"
            android:layout_width="520dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_button_two"
            android:backgroundTint="@color/yellow"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="@id/leftGuide"
            app:layout_constraintStart_toStartOf="@id/rightGuide"
            app:layout_constraintTop_toBottomOf="@id/englishBtn">

            <ImageView
                android:id="@+id/frenchCheck"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="440dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/dark_green"
                android:src="@drawable/ic_check_mark"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/frenchText"
                android:fontFamily="@font/fredoka_one_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/yellow"
                android:gravity="center_vertical"
                android:paddingStart="40dp"
                android:text="French"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="42sp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/chadBtn"
            android:layout_width="520dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_button_two"
            android:backgroundTint="@color/yellow"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="@id/leftGuide"
            app:layout_constraintStart_toStartOf="@id/rightGuide"
            app:layout_constraintTop_toBottomOf="@id/frenchBtn">

            <ImageView
                android:id="@+id/chadCheck"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="440dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/dark_green"
                android:src="@drawable/ic_check_mark"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/chadText"
                android:fontFamily="@font/fredoka_one_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/yellow"
                android:gravity="center_vertical"
                android:paddingStart="40dp"
                android:text="Chadian Arabic"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="42sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lagwanBtn"
            android:layout_width="520dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_button_two"
            android:backgroundTint="@color/yellow"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="@id/leftGuide"
            app:layout_constraintStart_toStartOf="@id/rightGuide"
            app:layout_constraintTop_toBottomOf="@id/chadBtn">

            <ImageView
                android:id="@+id/lagwanCheck"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="440dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/dark_green"
                android:src="@drawable/ic_check_mark"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/lagwanText"
                android:fontFamily="@font/fredoka_one_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/yellow"
                android:gravity="center_vertical"
                android:paddingStart="40dp"
                android:text="Lagwan"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="42sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mousgoumBtn"
            android:layout_width="520dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_button_two"
            android:backgroundTint="@color/yellow"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="@id/leftGuide"
            app:layout_constraintStart_toStartOf="@id/rightGuide"
            app:layout_constraintTop_toBottomOf="@id/lagwanBtn">

            <ImageView
                android:id="@+id/mousgoumCheck"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="440dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/dark_green"
                android:src="@drawable/ic_check_mark"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/mousgoumText"
                android:fontFamily="@font/fredoka_one_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/yellow"
                android:gravity="center_vertical"
                android:paddingStart="40dp"
                android:text="Mousgoum"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="42sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/massanaBtn"
            android:layout_width="520dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_button_two"
            android:backgroundTint="@color/yellow"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="@id/leftGuide"
            app:layout_constraintStart_toStartOf="@id/rightGuide"
            app:layout_constraintTop_toBottomOf="@id/mousgoumBtn">

            <ImageView
                android:id="@+id/massanaCheck"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="440dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/dark_green"
                android:src="@drawable/ic_check_mark"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/massanaText"
                android:fontFamily="@font/fredoka_one_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/yellow"
                android:gravity="center_vertical"
                android:paddingStart="40dp"
                android:text="Massana"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="42sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/museyBtn"
            android:layout_width="520dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_button_two"
            android:backgroundTint="@color/yellow"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="@id/leftGuide"
            app:layout_constraintStart_toStartOf="@id/rightGuide"
            app:layout_constraintTop_toBottomOf="@id/massanaBtn">

            <ImageView
                android:id="@+id/museyCheck"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="440dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/dark_green"
                android:src="@drawable/ic_check_mark"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/museyText"
                android:fontFamily="@font/fredoka_one_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/yellow"
                android:gravity="center_vertical"
                android:paddingStart="40dp"
                android:text="Musey"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="42sp"/>

        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>